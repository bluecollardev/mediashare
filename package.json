{
  "name": "mediashare",
  "version": "0.1.6",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "install:tools:mongocli": "brew install mongocli",
    "gen:client-api": "npm run gen:models && npm run format",
    "gen:models": "openapi-generator-cli generate",
    "gen:certs": "mkdir -p ./certs && rm -rf ./certs/* && mkcert -key-file ./certs/key.pem -cert-file ./certs/cert.pem localhost 0.0.0.0 127.0.0.1 ",
    "seed:users": "ts-node --project scripts/tsconfig.json -r tsconfig-paths/register scripts/gen-users.script.ts",
    "compose:up": "docker-compose -p mediashare up --build -V -d",
    "compose:db": "docker-compose up db",
    "api:start": "nest start --path apps/media-api/tsconfig.json --watch",
    "api:debug": "nest start --path apps/media-api/tsconfig.json --exec 'node --inspect' --debug --watch",
    "api:debug-brk": "nest start --path apps/media-api/tsconfig.json --exec 'node --inspect-brk' --debug --watch",
    "api:nodemon-debug": "nodemon --config nodemon-debug.json",
    "build": "rm -rf ./dist && nx build media-api --verbose",
    "build:api": "nest build --path apps/media-api/tsconfig.json --watch",
    "build:auth": "nest build --path apps/media-auth/tsconfig.json --watch",
    "build:prod": "rm -rf ./dist && nx build media-api --verbose",
    "start:prod": "pm2-runtime start pm2.yaml --env production",
    "serve": "nx serve",
    "serve:prod": "nx run-many --all --target=serve",
    "expose": "ngrok http 443",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch",
    "test": "nx test",
    "update": "nx migrate latest",
    "lint": "nx workspace-lint && nx lint",
    "format:check": "nx format:check",
    "format:write": "nx format:write",
    "format": "nx format:write"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^8.4.3",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.3",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.4.3",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.3",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.1.4",
    "@reduxjs/toolkit": "1.8.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "connect-mongo": "4.2.2",
    "express": "^4.18.2",
    "express-session": "^1.17.1",
    "faker": "^5.4.0",
    "joi": "^17.4.0",
    "jwk-to-pem": "^2.0.5",
    "mongodb": "^3.6.4",
    "nestjs-pino": "^1.3.0",
    "node-ses": "^3.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pino-pretty": "^4.7.0",
    "pm2": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "remeda": "0.0.27",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.1.6",
    "tslib": "^2.0.0",
    "type-fest": "^2.13.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@nrwl/cli": "13.9.4",
    "@nrwl/eslint-plugin-nx": "13.9.4",
    "@nrwl/jest": "13.9.4",
    "@nrwl/linter": "13.9.4",
    "@nrwl/nest": "13.9.4",
    "@nrwl/node": "13.9.4",
    "@nrwl/react": "13.9.4",
    "@nrwl/react-native": "13.9.4",
    "@nrwl/workspace": "13.9.4",
    "@openapitools/openapi-generator-cli": "^2.1.26",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.1.6",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "27.0.2",
    "@types/mongodb": "^3.6.6",
    "@types/node": "12.12.38",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.14.10",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "ansi-styles": "^5.1.0",
    "dotenv": "10.0.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^7.0.0",
    "jest": "27.2.3",
    "jest-auto-stub": "^1.0.8",
    "nx": "13.9.4",
    "prettier": "2.6.1",
    "ts-jest": "27.0.5",
    "ts-node": "^10.7.0",
    "typescript": "4.3.5"
  }
}
